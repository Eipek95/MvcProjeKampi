
@{
    ViewBag.Title = "SweetAlert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />
<button class="btn btn-primary" id="btn1">Button1</button>
<button class="btn btn-secondary" id="btn2">Button2</button>
<button class="btn btn-danger" id="btn3">Button3</button>
<script>
    $('#btn1').click(function () {
        swal("Hello world!");
    });
</script>
<script>
    $('#btn2').click(function () {
        swal({
            title: "Good job!",
            text: "You clicked the button!",
            icon: "success",
            button: "Aww yiss!",
        });
    });
</script>
<script>
    $('#btn3').click(function () {
        swal("Tebrikler!", "BAŞARILI BİR ŞEKİLDE EKLENDİ", "success");
    });
</script>